    <div class="container" id="banner">
      <br><br>
        <h1 class="header center teal-text text-lighten-2">Fau-X Files</h1>
        <div class="row center">
          <h5 class="header col s12 light">The truth is out there...not here!</h5>
        </div>
        <div class="row center">
          <a href="/scrape" id="scrape-button" class="btn-large waves-effect waves-light teal lighten-1">Scrape News</a>
        </div>
    </div>
        <br><br>
       
      <div class="container">
        <div class="row">
            <div class="col s12">


{{#each articles}} 
              <div class="card col s4">
                <div class="card-image waves-effect waves-block waves-light">
                    <img class="activator" src={{image}}>
                   
                  </div>
                  <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4">{{title}}<i class="material-icons right">more_horiz</i></span>
                    <p><a href={{link}} target="blank">Full Article</a></p>          
                    <hr>
                  <button data-target="modal1" class="btn modal-trigger">Write Comment</button>
                  <!-- Modal Structure -->
                    <div id="modal1" class="modal">
                      <div class="modal-content">
                        <div class="row">
                          <div class="input-field col s6">
                            <input id="name" type="text" class="validate">
                            <label class="active" for="name">Name</label>
                          </div>
                        </div>
                        <div class="row">
                          <div class="input-field col s6">
                            <textarea id="comment" class="materialize-textarea"></textarea>
                            <label for="comment">Comment</label>
                          </div>
                          </div>
                      </div>
                      <div class="modal-footer">
                        <button id="submit" class="modal-close waves-effect waves-green btn-flat" data-id="{{this._id}}">Submit</button>
                      </div>
                    </div>
                    <button data-target="modal2" class="btn modal-trigger" style="margin-top:5px">Read Comments</button>
                  <!-- Modal Structure -->
                    <div id="modal2" class="modal">
                      <div class="modal-content">
                        <div class="row">
                          <div class="col s6">
                          </div>
                        </div>
 
                      </div>
                      <div class="modal-footer">
                        <a href="#" class="modal-close waves-effect waves-green btn-flat">Close</a>
                      </div>
                    </div>

                  </div>
                  <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">Summary<i class="material-icons right">close</i></span>
                    <p>{{summary}}</p>
                  </div>
                </div>
 {{/each}}

            </div>
        </div>
      </div>
      <script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=" crossorigin="anonymous"></script>
  <script type="text/javascript">


  $('.modal-trigger').click(function(){
    $('.modal').modal();
  });

  $(document).on("click", "#submit", function() {

    var newComment = {
      name: $("#name").val().trim(),
      body: $("#comment").val().trim()
    };
    
    $("#name").val('');
    $("#comment").val('');

    var id = $("#submit").attr("data-id");
    console.log(id);


    // Send the POST request.
    $.ajax("/comment/" + id, {
      type: "POST",
      data: newComment
    }).then(
      function() {
        console.log("updated quote");
      });

  });


</script>

